<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/createuserqueue/db" VERSION="2025062615" COMMENT="Install tables for createuserqueue" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../lib/xmldb/xmldb.xsd">
    <TABLES>

        <!-- Coda utenti -->
        <TABLE NAME="local_createuserqueue_queue" COMMENT="Coda per importazione utenti asincrona">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="firstname" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="lastname" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="codicefiscale" TYPE="char" LENGTH="50" NOTNULL="true"/>
                <FIELD NAME="email" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="queued"/>
                <FIELD NAME="startedat" TYPE="int" LENGTH="10" NOTNULL="false"/>
                <FIELD NAME="retries" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <!-- Errori di importazione -->
        <TABLE NAME="local_createuserqueue_errors" COMMENT="Log errori importazione utenti">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="firstname" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="lastname" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="codicefiscale" TYPE="char" LENGTH="50" NOTNULL="true"/>
                <FIELD NAME="email" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="errormessage" TYPE="text" NOTNULL="true"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <!-- Utenti importati con successo (per debug) -->
        <TABLE NAME="local_createuserqueue_log" COMMENT="Log utenti importati con successo">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="username" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="firstname" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="lastname" TYPE="char" LENGTH="100" NOTNULL="true"/>
                <FIELD NAME="email" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
        </TABLE>

    </TABLES>
</XMLDB>
