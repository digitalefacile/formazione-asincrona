{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
  {{> theme_edumy/ccn_preloader }}
  <div class="wrapper" id="page-content">
    {{> theme_edumy/ccn_mdl_400/navbar }}

    <div class="mobile-breadcrumb d-lg-none">
      {{> theme_edumy/ccn_breadcrumb }}
    </div>

    {{#courseindex}}
    {{! Se è attivo l'indice del corso, va messo in un wrapper insieme a breadcrumb e page-wrapper }}
    <div id="ccn-course-index-breadcrumb-page-wrapper" class="container-fluid">
    <div class="row">
    <div class="col-md-12 col-lg-3 d-md-inline d-lg-block ccn-course-courseindex-col">
      <div class="courseindex-toggle-wrapper my-2">
		    <a class="btn btn-secondary d-md-none" data-toggle="collapse" href="#theme_boost-drawers-courseindex" role="button"
		       aria-expanded="false" aria-controls="theme_boost-drawers-courseindex">
			    Indice del corso
		    </a>
      </div>
        {{< theme_boost/drawer }}
            {{$id}}theme_boost-drawers-courseindex{{/id}}
<!--	        {{$drawerclasses}}drawer drawer-left {{#courseindexopen}}show{{/courseindexopen}}{{/drawerclasses}}-->
	        {{$drawerclasses}}drawer d-lg-block collapse{{/drawerclasses}}
            {{$drawercontent}}
                {{{courseindex}}}
            {{/drawercontent}}
            {{$drawerpreferencename}}drawer-open-index{{/drawerpreferencename}}
            {{$drawerstate}}show-drawer-left{{/drawerstate}}
            {{$forceopen}}1{{/forceopen}}
            {{$tooltipplacement}}right{{/tooltipplacement}}
            {{$closebuttontext}}{{#str}}closecourseindex, core{{/str}}{{/closebuttontext}}
        {{/ theme_boost/drawer}}
    </div>
    {{! Se è attivo l'indice del corso, unisco in un secondo wrapper breadcrumb e page-wrapper }}
    <div id="ccn-course-breadcrumb-page-wrapper" class="col-12 col-lg-8 col-xl-9">
    {{/courseindex}}

<div class="d-none d-lg-block ">
  {{> theme_edumy/ccn_breadcrumb }}
</div>

    <div id="ccn-page-wrapper">
      <div id="ccnSettingsMenuContainer">
        <div id="ccnSettingsMenuInner">{{! @ccnIrrevocable: These container divs #ccnSettingsMenuContainer/Inner must exist unconditionally, only contents can be conditional }}
          {{#show_settings_controls}}
            {{#hasregionmainsettingsmenu}}
              <div id="region-main-settings-menu" class="d-print-none {{#hasblocks}}has-blocks{{/hasblocks}}">
                <div> {{{ output.region_main_settings_menu }}} </div>
              </div>
            {{/hasregionmainsettingsmenu}}
          {{/show_settings_controls}}
        </div>
      </div>
      {{{ output.standard_top_of_body_html }}}
      <div>
        {{{ output.full_header }}}

        {{#secondarymoremenu}}
          <div class="ccn-4-navigation container" style="margin-top:30px">
            <div class="secondary-navigation">
              {{> core/moremenu}}
            </div>
          </div>
        {{/secondarymoremenu}}

        {{{ output.edit_switch }}}
        {{{ blocks_fullwidth_top }}}
        <div id="ccn-main-region">
	        {{#isblog}}
		        <div class="container-fluid blog-header">
			        <div class="ccnMdlHeading ">
				        <h1 class=" blogTitle">Bacheca annunci</h1>
				        <h2 class=" blogDescription">Lo spazio dedicato alle <strong>comunicazioni da non perdere </strong>per rimanere al passo con il tuo percorso formativo.</h2>
			        </div>
		        </div>
	        {{/isblog}}
          <div class="container">
            {{#has_back2course_btn}}
              {{{ back2course_btn }}}
            {{/has_back2course_btn}}
            <div class="row">
              <div id="row-cols" class="
                {{#sidebar_none}} col-md-12 col-lg-12 col-xl-12 {{/sidebar_none}}
                {{#sidebar_double}} col-lg-6 {{/sidebar_double}}
                {{#sidebar_single_left}} col-lg-8 col-xl-8 {{/sidebar_single_left}}
                {{#sidebar_single_right}} col-md-12 col-lg-8 col-xl-9 {{/sidebar_single_right}}
              ">
                <div id="region-main" {{#hasblocks}}class="--rm--has-blocks" {{/hasblocks}} aria-label="{{#str}}content{{/str}}">
                  {{#hasregionmainsettingsmenu}}
                    <div class="region_main_settings_menu_proxy"></div>
                  {{/hasregionmainsettingsmenu}}
                  {{#has_blocks_above_content}}
                    {{{ blocks_above_content }}}
                  {{/has_blocks_above_content}}
                  <div id="ccn-main">
                    {{#is_course}}
                      {{^display_course_content}}
                        <div id="ccn_prohibit_course_content"></div>
                      {{/display_course_content}}
                      {{#display_course_content}}
                        {{^participant_user_profile}}
                          <div class="cs_row_three">
                            <div class="course_content">
                            {{#hascoverimage}}
                                <div class="course-cover-image"><img src="{{{coverimage}}}" /></div>
                            {{/hascoverimage}}

                              <div class="cc_headers">
                                <h4 class="title">{{#str}}course_content, theme_edumy{{/str}}</h4>
                                <ul class="course_schdule float-right">
                                  {{#show_course_start}}
                                    <li class="list-inline-item"><a href="#">{{#str}}startdate{{/str}}: {{{ coursestartdate }}} </a></li>
                                  {{/show_course_start}}
                                  {{#show_course_category}}
                                    <li class="list-inline-item"><a href="#">{{#str}}category{{/str}}: {{{ coursecategory }}}</a></li>
                                  {{/show_course_category}}
                                </ul>
                              </div>
                              <br>
                        {{/participant_user_profile}}
                      {{/display_course_content}}
                    {{/is_course}}
                    {{{ output.course_content_header }}}
                    {{#headercontent}}
                        {{> core/activity_header }}
                    {{/headercontent}}
                    {{{ output.main_content }}}
                    {{#in_course_activity}}
                      {{{ output.activity_navigation }}}
                    {{/in_course_activity}}
                    {{{ output.course_content_footer }}}
                    {{#is_course}}
                      {{#display_course_content}}
                        {{^participant_user_profile}}
                  </div>
                </div>
                {{/participant_user_profile}}
                {{/display_course_content}}
                {{/is_course}}
              </div>
              {{#has_blocks_below_content}}
                {{{ blocks_below_content }}}
              {{/has_blocks_below_content}}
            </div>
          </div>
          {{#sidebar_right}}
            <div class="col-lg-4 col-xl-3">
              <div class="ccn-sidebar-region" aria-label="{{#str}}blocks{{/str}}">
                {{{ sidepreblocks }}}
              </div>
            </div>
          {{/sidebar_right}}
        </div>
      </div>
    </div>
    {{{ blocks_fullwidth_bottom }}}

  {{#courseindex}}</div></div></div></div>{{/courseindex}} {{! end of ccn-course-index-breadcrumb-page-wrapper and ccn-course-breadcrumb-page-wrapper  }}

  {{! Se è attivo l'indice del corso, il footer va fuori dal wrapper #page-content }}
  {{#courseindex}}<!-- ci --></div>{{/courseindex}}
  {{> theme_edumy/ccn_mdl_400/footer }}
  {{^courseindex}}<!-- not ci --></div>{{/courseindex}}

  {{{ output.standard_after_main_region_html }}}
</body>

</html>
{{#js}}
  M.util.js_pending('theme_boost/loader');
  require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
  });
  M.util.js_pending('theme_boost/drawer');
  require(['theme_boost/drawer'], function(mod) {
  mod.init();
  M.util.js_complete('theme_boost/drawer');
  });
{{/js}}
