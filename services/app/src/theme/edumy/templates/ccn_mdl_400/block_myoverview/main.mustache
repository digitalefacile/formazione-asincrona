{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}

<div id="block-myoverview-{{uniqid}}" class="container-fluid block-myoverview block-cards block-my-journey" data-region="myoverview" role="navigation">
    <div class="container-fluid p-0" style="
        display: flex;
        flex-direction: column;
        align-items: center;
    ">
    <h1 class="title">
    Il mio percorso
    </h1>
    <h2 class="subtitle">
    Gestisci la tua formazione e monitora i tuoi progressi passo dopo passo. Completa i corsi attivi e scegli i corsi da seguire per ottenere nuovi badge.
    </h2>
  <div class="my_course_content mb30">
    <div class="my_course_content_header" style="    display: none!important;">
        <div class="candidate_revew_select style2 text-right w-100" data-region="filter" aria-label="{{#str}} aria:controls, block_myoverview {{/str}}">
          <div data-region="filter" class="d-flex align-items-center" aria-label="{{#str}} aria:controls, block_myoverview {{/str}}">
              {{> theme_edumy/ccn_mdl_400/block_myoverview/nav-search-widget }}
              {{> theme_edumy/ccn_mdl_400/block_myoverview/nav-grouping-selector }}
              {{> theme_edumy/ccn_mdl_400/block_myoverview/nav-sort-selector }}

              {{#displaydropdown}}
              {{> theme_edumy/ccn_mdl_400/block_myoverview/nav-display-selector  }}
              {{/displaydropdown}}
          </div>
      </div>
    </div>

    </div>

    <h3 class="container-fluid p-0" style="
    color: #0066CC;
    padding-left: 15px!important;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 24px;
    ">
        I miei corsi attivi
    </h3>
    <div class="container-fluid p-0">
        {{> theme_edumy/ccn_mdl_400/block_myoverview/courses-view }}

    </div>
</div>
</div>
<div class="container-fluid discover-courses-section">
     <div class="container-fluid title">
        Scopri tutti i corsi disponibili
     </div>
     <div class="container-fluid subtitle">
        Esplora le 7 aree tematiche dei corsi e perfeziona le tue competenze in ogni ambito della facilitazione digitale.
     </div>
     <div class="container-fluid cta">
        <a data-redirect="goAllCourses" class="go-all-courses">Vai a tutti i corsi</a>
     </div>
<div>



{{#js}}
require(
[
    'jquery',
    'block_myoverview/main',
],
function(
    $,
    Main
) {
    var root = $('#block-myoverview-{{uniqid}}');
    Main.init(root);
});
{{/js}}
